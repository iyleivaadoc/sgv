@model IEnumerable<web.Models.RoleViewModel>

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-6 col-md-offset-3">
    <div style="position: relative;">
        <div style="position: absolute;">
            <h2>Roles del sistema</h2>
        </div>
        <div style="position: absolute; top: 20px; right:0px;">
            @Html.ActionLink("Crear Rol", "Create", null, new { @class = "btn btn-success" })
            <br /><br />
        </div>
    </div>
    <div class="col-md-12" style="position: absolute; top: 60px; left:0;">
        <table class="table table-striped table-responsive table-bordered">
            <tr>
                <th width="50%">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="text-align:center">Opciones</th>
            </tr>

            @foreach (var item in Model)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td style="text-align:center">
                        @Html.ActionLink("Permisos", "AsignarAccesos", new { id = item.Id }, new { @class = "btn btn-xs btn-success" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-xs btn-info" })
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id },new { @class="btn btn-xs btn-warning"})
                        @Html.ActionLink("Borrar", "Delete", new { id = item.Id }, new { @class = "btn btn-xs btn-danger" })
                        
                    </td>
                </tr>
        }

        </table>
    </div>
</div>