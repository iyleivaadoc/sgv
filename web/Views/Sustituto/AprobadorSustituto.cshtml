@model web.ViewModels.AprobadorVM
@{
    ViewBag.Title = "Aprobador Sustituto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-offset-2 col-md-8">
    <h2>Aprobador Sustituto</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal col-md-6 col-md-offset-3">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="col-md-3 control-label" for="Principal">Usuario</label>
                <div class="col-md-9">
                    @Html.HiddenFor(model => model.Principal)
                    @Html.DropDownList("Principal", null, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                    
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label" for="Sustituto">Sustituto</label>
                <div class="col-md-9">
                    @Html.DropDownList("Sustituto", null, "-- Seleccione --", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    @Html.ActionLink("Cancelar", "Index", new { idViaje = ViewBag.idViaje }, new { @class = "btn btn-warning" })
                </div>
            </div>
        </div>
    }
</div>
